page{
  width: 100%; height: 100%;
}

.main{
  width: 100%; height: 100%;
}
.search{
  width: 100%; height: 80rpx;
  padding: 0 40rpx;
  margin-top: 20rpx;
}
.search input{
  background: #eee; border-radius:40rpx;
  height: 60rpx; margin-right: 20rpx;
  padding:0 40rpx; font-size:32rpx;
  box-sizing: border-box;
}
.search view{
  background: dodgerblue; color: #fff;
  font-size: 32rpx; border-radius: 20rpx;
  width: 120rpx; height: 60rpx;
  text-align: center; line-height: 60rpx;
  display: block;
  margin-left:40rpx;
}

.searchList{
  width: 100%; padding: 0 40rpx;
  position: absolute; left:0; top:100rpx;
  z-index: 1000;
}
.searchList view{
  width: 100%; height: 80rpx; line-height: 80rpx;
  background: #fff;
  font-size: 26rpx; color: #000;
  border-bottom:1rpx solid #eee;
}


.history{
  position: absolute;
  left:0; top:100rpx; right:0;bottom:0;
  padding-top:50rpx; box-sizing: border-box;
}
.history view{
  width: 90%;
  height:80rpx; line-height: 80rpx;
  color: #007aff;
  font-size:36rpx;
}
